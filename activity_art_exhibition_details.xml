<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F0EBF8">

    <TextView
        android:id="@+id/artExhibitionDetailsTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:text="معرض الفنون" />

    <TextView
        android:id="@+id/artExhibitionDetailsIntroTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"
        android:gravity="center_horizontal"
        android:text="نرحب بكم في معرض الفنون الذي يعرض إبداعات طلابنا الموهوبين وأعمالهم الفنية المتميزة. استمتعوا بمشاهدة مواهبهم المتنوعة." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/studentArtRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2" />

</LinearLayout>